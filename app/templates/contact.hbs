{{outlet}}

<div class="col-md-6 col-md-offset-3">
	{{#if responseMessage}}
	  <div class="alert alert-success">{{responseMessage}}</div>
	{{/if}}
	<h1>Contact</h1>
	<form action="">
		<div class="form-group">
			<label>Email</label>
			{{input type="email" class="form-control" value=emailAddress placeholder="example@mail.com"}}
		</div>
		<div class="form-group">
			<label>Message</label>
			{{textarea row="7" placeholder="Votre message (5 caract√®re un minimum" value=message class="form-control"}}
		</div>

		<div class="action">
			<button class="btn btn-primary btn-lg" {{action 'sendMessage'}} disabled="{{unless isValid 'disabled'}}">Envoyer</button>
		</div>
	</form>
</div>